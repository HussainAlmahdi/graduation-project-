<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/text"
android:gravity="center"
    tools:context="com.hussainalmahdi.android.matloob.ProviderDetailFragment"
    >

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الخدمات التي تزودها"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="40dp"
            android:backgroundTint="@color/list_background"
            android:background="@drawable/edit_text_syle_2"
            android:layout_gravity="center"
            android:id="@+id/provide_tags_button"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:layout_height="37dp" />


        <AutoCompleteTextView
        android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
        android:layout_height="40dp"
        android:id="@+id/autoCompleteEditText"
        android:background="@drawable/edittext_style"/>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/add_tags_recycler_view"
        tools:listitem="@layout/item_list_tags"
        android:orientation="horizontal"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textStyle="bold" />

</LinearLayout>










